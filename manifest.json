{
    "manifest_version": 3,
    "name": "Browser activity recorder",
    "version": "1.0",
    "description": "Record browser interactions ",

    "background":{
            "service_worker" : "background.js"
    },
    "permissions":[
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "http://localhost:3000/*"
    ],
    "action": {
        "default_popup": "popup.html" 
      },

    "icons": {
        "16": "icons/icon16.png", 
        "48": "icons/icon48.png", 
        "128": "icons/icon128.png" 
      }
}